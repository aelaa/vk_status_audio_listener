{
    "manifest_version": 2,

    "name": "Оповещения VK",
    "description": "Adds notifications about new post in groups.",
    "homepage_url": "http://github.com/jastkand",
    "version": "1.0.0",

    "permissions": [ "notifications", "contextMenus", "tabs", "storage" , "alarms", "http://*/*", "https://*/*" ],

    "icons": {
        "128": "assets/icon-128.png",
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png"
    },

    "background": {
        "scripts": [
            "libs/jquery.min.js",
            "libs/underscore.min.js",
            "libs/api_manager.js",
            "libs/helpers.js",
            "build/background.js"
        ]
    },

    "options_page": "options.html",

    "browser_action": {
        "default_icon": "assets/icon-48.png",
        "default_popup": "popup.html"
    },

    "web_accessible_resources": [
        "assets/icon-48.png"
    ]
}
