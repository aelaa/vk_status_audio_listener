{
    "manifest_version": 2,

    "name": "VK Status",
    "description": "Checks Louchan VK status for audio streaming",
    "homepage_url": "https://github.com/aelaa/vk-status",
    "version": "1.0.5",

    "permissions": [ "contextMenus", "tabs", "storage" , "alarms", "http://*/*", "https://*/*" ],

    "icons": {
        "128": "assets/icon-128.png",
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png"
    },

    "background": {
        "scripts": [
          "js/background.js"
        ]
    },

    "options_page": "options.html",

    "browser_action": {
        "default_icon": "assets/icon-48.png",
        "default_popup": "popup.html"
    }
}
